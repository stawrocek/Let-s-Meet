<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.cba.stawrocek" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <name>LetsMeet</name>
    <description>
        Let's Meet is my approach to apki.org smart city hackathon.
		P.S. google maps js api rocks!
		P.S. vol. 2 cordova rocks too!
    </description>
    <author email="stawrocek@gmail.com" href="http://github.com/stawrocek">
        stawrocek
    </author>
    <content src="transportGPSView.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
